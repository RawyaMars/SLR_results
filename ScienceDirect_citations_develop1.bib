	abstract = {With the development of computing technology, the security and credibility of data is becoming more and more important. However, the security and trust of traditional centralized system is insufficient and data tampering is easy to occur, which leads to data distrustful. The characteristics of blockchain, such as traceable and tamper-proof, can solve the issue of data trust. However, the access threshold of the blockchain is high. In order to reduce the technical difficulty, in this article, a universal BaaS platform (called TrustedBaaS) which has high flexibility and scalability was designed based on consortium blockchain, it can support user-defined configuration according to requirements of users. Afterwards we described the process of executing a transaction in detail and discussed the core protocols and algorithms of the BaaS platform, which includes identity authentication, consensus algorithm, data protection protocol, smart contract and on-blockchain and off-blockchain data collaboration. Furthermore, we implemented TrustedBaaS based on Hyperledger Fabric and a vehicular information management application platform and a transaction settlement application platform were configured based on TrustedBaaS. Finally, we evaluated the performance of the TrustedBaaS and compared it with current public blockchain such as Bitcoin and Ethereum. The evaluation showed that the designed TrustedBaaS has better performance than the existing public blockchain platforms. Moreover, it is common distributed higher-level trusted platform which provides configurable and extensible functions and solves the problem that the access threshold of blockchain technology is high.},
	journal = {Computer Networks},
	author = {Ma, Zhaofeng and Zhao, Weizhe and Luo, Shoushan and Wang, Lingyun},
	year = {2020},
	keywords = {Blockchain-as-a-Service, Data protection and collaboration, Trusted platform},
	pages = {107600},
}

@article{uddin_blockchain_2021,
	title = {Blockchain {Medledger}: {Hyperledger} fabric enabled drug traceability system for counterfeit drugs in pharmaceutical industry},
