	author = {Ma, Nan and Waegel, Alex and Hakkarainen, Max and Braham, William W. and Glass, Lior and Aviv, Dorit},
	year = {2023},
	keywords = {Blockchain, Carbon intensity, Demand response, Energy use intensity, Internet of Things, Occupant behavior},
