	author = {Tan, Xudong and Cheng, Wei and Huang, Haiping and Jing, Tianyi and Wang, Haiyan},
	year = {2023},
	keywords = {Blockchain, Cloud-edge collaboration, Data sharing, Edge cache, Internet of vehicles, Searchable attribute-based encryption, Smart contract},
