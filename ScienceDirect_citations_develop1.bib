}

@article{cheng_blockchain_2022,
	title = {The blockchain based access control scheme for the {Internet} of {Things}},
	volume = {202},
	issn = {1877-0509},
	url = {https://www.sciencedirect.com/science/article/pii/S1877050922005804},
