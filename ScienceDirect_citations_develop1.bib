	author = {Gao, Jianbin and Adjei-Arthur, Bonsu and Sifah, Emmanuel Boateng and Xia, Hu and Xia, Qi},
	year = {2022},
	keywords = {Blockchain, Game-theory, IoT, Smart contract, Supply chain},
