	author = {Lim, Arnold and Pan, Enrong},
	year = {2021},
	keywords = {Algorithmic justice, Blockchain, Global social contract, Incoterms, International distributive justice, John Rawls, New Bretton Woods, Rawlsian algorithm, Responsible innovation, Smart contract, Society-in-the-Loop, StRIM, Trade ethics, Trade facilitation, Value sensitive design},
