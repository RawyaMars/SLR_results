	author = {Han, Hongdan and Shiwakoti, Radha K. and Jarvis, Robin and Mordi, Chima and Botchie, David},
	year = {2023},
	keywords = {Accounting, Artificial intelligence, Auditing, Blockchain, Review},
	pages = {100598},
}

