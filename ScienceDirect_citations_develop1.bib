	journal = {Information Processing \& Management},
	author = {Piao, Chunhui and Hao, Yurong and Yan, Jiaqi and Jiang, Xuehong},
	year = {2021},
	keywords = {Consortium blockchain, Government data sharing, Privacy preserving, Smart contract},
	pages = {102651},
}

