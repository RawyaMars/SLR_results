@article{hasan_hybrid_2021,
	title = {Hybrid {Blockchain} {Architecture} for {Cloud} {Manufacturing}-as-a-service ({CMaaS}) {Platforms} with {Improved} {Data} {Storage} and {Transaction} {Efficiency}},
