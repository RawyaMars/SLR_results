	author = {Qian, Jianping and Yu, Qiangyi and Jiang, Li and Yang, Han and Wu, Wenbin},
	year = {2022},
	keywords = {Blockchain, COVID-19, Food cold chain, IOT, Traceability},
	pages = {108940},
}

@article{gupta_trailchain_2022,
