	journal = {Blockchain: Research and Applications},
	author = {Lo, Sin Kuang and Staples, Mark and Xu, Xiwei},
	year = {2021},
	keywords = {Blockchain, Blockchain anomaly, Data integrity, Multi-party systems, Security protocol},
	pages = {100024},
}

