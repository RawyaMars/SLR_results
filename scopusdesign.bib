@ARTICLE{Madine20238734,
	author = {Madine, Mohammad and Salah, Khaled and Jayaraman, Raja and Zemerly, Jamal},
	title = {NFTs for Open-Source and Commercial Software Licensing and Royalties},
	year = {2023},
	journal = {IEEE Access},
	volume = {11},
	pages = {8734 – 8746},
