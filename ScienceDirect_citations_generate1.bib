	journal = {Digital Communications and Networks},
	author = {Verma, Ashwin and Bhattacharya, Pronaya and Bodkhe, Umesh and Saraswat, Deepti and Tanwar, Sudeep and Dev, Kapal},
	year = {2023},
	keywords = {5G-enhanced mobile broadband, Blockchain, Federated clouds, Rank-based recommender model, Smart contracts},
