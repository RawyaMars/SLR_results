	author = {Azevedo, Rodrigo Motta de and Canha, Luciane Neves and Garcia, Vinícius Jacques and Rangel, Camilo Alberto Sepúlveda and Santana, Tiago Augusto Silva and Nadal, Zeno Iensen},
