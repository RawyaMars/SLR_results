@article{hu_transaction-based_2021,
	title = {Transaction-based classification and detection approach for {Ethereum} smart contract},
	volume = {58},
	issn = {0306-4573},
	url = {https://www.sciencedirect.com/science/article/pii/S0306457320309547},
