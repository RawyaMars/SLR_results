	author = {Chang, Fengtian and Zhou, Guanghui and Zhang, Chao and Ding, Kai and Cheng, Wei and Chang, Fengjiao},
	year = {2021},
	keywords = {Blockchain network, Collaborative knowledge sharing, Complex multi-component systems, Cross-organization sharing, Maintenance decision-making, Product service system},
	pages = {124541},
}

