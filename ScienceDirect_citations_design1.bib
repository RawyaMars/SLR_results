	author = {Li, Haiyu and Wang, Tao and Qiao, Zirui and Yang, Bo and Gong, Yueyang and Wang, Jingyi and Qiu, Guoyong},
	year = {2021},
	keywords = {Blockchain, Search results verification, Searchable encryption with fair payment, Shared revocation, Smart contract},
