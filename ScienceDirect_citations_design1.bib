	author = {González, Víctor and Sánchez, Luis and Lanza, Jorge and Santana, Juan Ramón and Sotres, Pablo and García, Alberto E.},
	year = {2023},
	keywords = {Blockchain, Data Marketplace, Data subscription, Internet of Things, Performance evaluation, Smart Contracts},
	pages = {100722},
}

@article{baig_design_2021,
	title = {Design and implementation of an open-{Source} {IoT} and blockchain-based peer-to-peer energy trading platform using {ESP32}-{S2}, {Node}-{Red} and, {MQTT} protocol},
