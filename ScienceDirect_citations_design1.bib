	author = {Yang, Lei and Zou, Wanrong and Wang, Jianggan and Tang, Zi},
	year = {2022},
	keywords = {Blockchain, Data sharing, Edge computing, Industrial Internet of Things (IIoT)},
	pages = {219--232},
