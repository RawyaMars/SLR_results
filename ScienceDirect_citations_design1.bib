	author = {Yue, Dongdong and Li, Ruixuan and Zhang, Yan and Tian, Wenlong and Huang, Yongfeng},
	year = {2020},
	keywords = {Blockchain, Data integrity verification, Edge-cloud storage, Merkle trees, Sampling},
