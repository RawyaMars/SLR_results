	author = {Lin, Chao and He, Debiao and Huang, Xinyi and Xie, Xiang and Choo, Kim-Kwang Raymond},
	year = {2020},
	keywords = {Bilinear pairings, Blockchain, Internet of Things, Outsource-secure algorithms, Smart contract},
