	author = {Pandey, Sachi and Chouhan, Vikas and Verma, Devanshi and Rajrah, Shubham and Alenezi, Fayadh and Saini, Rajkumar and Santosh, Kc},
	title = {Do-It-Yourself Recommender System: Reusing and Recycling With Blockchain and Deep Learning},
	year = {2022},
	journal = {IEEE Access},
